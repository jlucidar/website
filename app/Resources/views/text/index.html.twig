{% extends 'base.html.twig' %}

{% block body %}
    <h1>Text list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Textid</th>
                <th>French</th>
                <th>Editable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for text in texts %}
            <tr>
                <td><a href="{{ path('text_show', { 'id': text.id }) }}">{{ text.id }}</a></td>
                <td>{{ text.textId }}</td>
                <td>{{ text.french }}</td>
                <td>{% if text.editable %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('text_show', { 'id': text.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('text_edit', { 'id': text.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('text_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
