{% extends 'base.html.twig' %}

{% block body %}
    <h1>AskInfo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ askInfo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ askInfo.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ askInfo.firstname }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ askInfo.company }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ askInfo.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ askInfo.phone }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ askInfo.message }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('askinfo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('askinfo_edit', { 'id': askInfo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
