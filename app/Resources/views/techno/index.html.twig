{% extends 'base.html.twig' %}

{% block body %}
    <h1>Techno list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for techno in technos %}
            <tr>
                <td><a href="{{ path('techno_show', { 'id': techno.id }) }}">{{ techno.id }}</a></td>
                <td>{{ techno.name }}</td>
                <td>{{ techno.image }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('techno_show', { 'id': techno.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('techno_edit', { 'id': techno.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('techno_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
