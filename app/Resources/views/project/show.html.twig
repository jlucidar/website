{% extends 'base.html.twig' %}

{% block css %}
	{{ parent() }}
	<link href="{{ asset('css/project/show.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
	<div>
		<h1>{{ project.name }}</h1>
		<div id="description">
			<div>
				<img src="/images/projects/{{ project.imageName }}"></img>
			</div>
			<p>{{ project.description }}</p>
		</div>
		<h2>Equipe</h2>
		<ul id="members">
			{% for member in project.members %}
				<li>
					<a href="/member/{{member.id}}" class="member">
						<img src="/images/profils/{{member.imageName}}"></img>
						<span>
							<h3>{{ member.firstname }} {{ member.name }}</h3>
							<h3>{{ member.job }}</h3>
						</span>
					</a>
				</li>
			{% endfor %}
		</ul>
		<h2>Technologies</h2>
		<ul id="technos">
			{% for techno in project.technos %}
				<li>
					<img src="/images/technos/{{techno.image}}" 
						title="{{techno.name}}"
						alt="{{techno.name}}" >
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}

